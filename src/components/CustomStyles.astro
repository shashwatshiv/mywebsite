---
import '@fontsource-variable/inter';
import '@fontsource-variable/space-grotesk';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Space Grotesk Variable';

    /* Modern color scheme */
    --aw-color-primary: #4f46e5;
    --aw-color-secondary: #ec4899;
    --aw-color-accent: #8b5cf6;

    --aw-color-text-heading: rgb(17, 24, 39); /* Dark gray */
    --aw-color-text-default: rgb(55, 65, 81); /* Medium gray */
    --aw-color-text-muted: rgb(107, 114, 128); /* Light gray */

    /* Light theme background with subtle texture */
    --aw-color-bg-page: rgb(249, 250, 251);
    --aw-color-bg-page-dark: rgb(17, 24, 39);

    ::selection {
      background-color: var(--aw-color-accent);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Space Grotesk Variable';

    /* Dark theme modern colors */
    --aw-color-primary: #4f46e5;
    --aw-color-secondary: #ec4899;
    --aw-color-accent: #8b5cf6;

    --aw-color-text-heading: rgb(243, 244, 246);
    --aw-color-text-default: rgb(229, 231, 235);
    --aw-color-text-muted: rgb(156, 163, 175);

    /* Dark theme background */
    --aw-color-bg-page: rgb(17, 24, 39);

    ::selection {
      background-color: var(--aw-color-accent);
      color: rgb(17, 24, 39);
    }
  }
</style>
